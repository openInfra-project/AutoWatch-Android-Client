<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3c5b9a"
    android:orientation="horizontal"
    android:fitsSystemWindows="true"
    tools:context=".Home"
    tools:openDrawer="start">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="18dp"
            android:paddingTop="12dp"
            android:paddingRight="18dp">

            <ImageView
                android:id="@+id/btn_home_menu"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@drawable/ic_baseline_person_outline_24" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <ImageView
                android:id="@+id/btn_myroom"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/door_outline" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">


            <Button
                android:id="@+id/btn_home_join"
                android:layout_width="300dp"
                android:layout_height="170dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:background="@drawable/enterroom"/>



            <Button
                android:id="@+id/btn_home_create"
                android:layout_width="300dp"
                android:layout_height="170dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:background="@drawable/makeroom"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:id="@+id/frame_highlight"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="40dp"
                        android:layout_gravity="bottom">

                        <LinearLayout
                            android:id="@+id/Linear_background"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center"
                            android:background="@drawable/home_hightlight_background"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/Linear_Up"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/image_home_highlight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/border_home_highlight"
                            android:src="@drawable/ic_baseline_priority_high_24" />

                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


   <include layout="@layout/nav_userheader" />
    <include layout="@layout/nav_roomheader" />



</androidx.drawerlayout.widget.DrawerLayout>