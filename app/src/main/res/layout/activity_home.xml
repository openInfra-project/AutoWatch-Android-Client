<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3c5b9a"
    android:orientation="horizontal"
    android:fitsSystemWindows="true"
    tools:context=".Home"
    tools:openDrawer="start">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="18dp"
            android:paddingTop="12dp"
            android:paddingRight="18dp">

            <ImageView
                android:id="@+id/btn_home_menu"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@drawable/user" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <ImageView
                android:id="@+id/btn_myroom"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/door" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">


            <Button
                android:id="@+id/btn_home_join"
                android:layout_width="300dp"
                android:layout_height="170dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:background="@drawable/enterroom"/>



            <Button
                android:id="@+id/btn_home_create"
                android:layout_width="300dp"
                android:layout_height="170dp"
                android:layout_marginTop="70dp"
                android:layout_gravity="center"
                android:background="@drawable/makeroom"/>




        </LinearLayout>
    </LinearLayout>


   <include layout="@layout/nav_userheader" />
    <include layout="@layout/nav_roomheader" />



</androidx.drawerlayout.widget.DrawerLayout>