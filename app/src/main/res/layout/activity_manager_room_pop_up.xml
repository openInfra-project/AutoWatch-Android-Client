<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    tools:context=".ManagerRoomPopUp"
    tools:openDrawer="end">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:background="@color/ourColor"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:orientation="horizontal"
                android:padding="8dp">


                <ImageView
                    android:id="@+id/btn_roominfo_backpress"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_baseline_arrow_back_24" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:elevation="10dp"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/door_main"
                        android:layout_width="48dp"
                        android:layout_height="48dp"/>
                    <TextView
                        android:textSize="32dp"
                        android:textColor="#000"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Make Room"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="안녕하세요"
                        android:textColor="#000"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/text_managerroom_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="aaa"
                        android:textColor="#000"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="님"
                        android:textColor="#000"
                        android:textSize="18dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="방 이름과 방비번을 필수적으로 입력해주세요." />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="6dp"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="15"
                            android:text="방 이름"
                            android:textSize="16dp"
                            android:textColor="#c92a2a" />

                        <TextView
                            android:id="@+id/text_manager_roomname"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:layout_marginLeft="6dp"
                            android:layout_weight="60"
                            android:background="@drawable/login_borderbox"
                            android:textColorHint="#000" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="25"
                            android:gravity="center">

                            <Button

                                android:id="@+id/btn_remake"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/button"
                                android:text="click"
                                android:textSize="12dp"
                                android:textColor="#ffffff" />
                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:weightSum="100"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="15"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="6dp"
                            android:layout_marginLeft="3dp"
                            android:text="방 비번"
                            android:textSize="16dp"
                            android:textColor="#c92a2a" />

                        <EditText
                            android:layout_weight="85"
                            android:id="@+id/edit_manager_roompassword"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/login_borderbox"
                            android:textColorHint="#000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="※EXAM MODE 선택시 명단 제출이 필수입니다." />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:weightSum="10">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="2"
                                    android:layout_marginStart="6dp"
                                    android:layout_marginLeft="3dp"
                                    android:text="Mode"
                                    android:textSize="17dp"
                                    android:textColor="#c92a2a" />
                                <RadioGroup
                                    android:id="@+id/rg1"
                                    android:layout_weight="8"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >

                                    <RadioButton
                                        android:id="@+id/rb1"
                                        android:textSize="18dp"
                                        android:buttonTint="@color/blue"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="STUDY MODE"
                                        android:layout_weight="1"/>

                                    <RadioButton
                                        android:id="@+id/rb2"
                                        android:textSize="18dp"
                                        android:buttonTint="@color/blue"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="EXAM MODE"
                                        android:layout_weight="1"/>

                                </RadioGroup>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:padding="6dp"
                                    android:id="@+id/text_makeroom_cell_border"
                                    android:layout_weight="4"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/login_borderbox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/text_makeroom_cell"
                                        android:textColor="#000"
                                        android:layout_width="wrap_content"
                                        android:text="명단을 가져와주세요"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>

                                <Button
                                    android:layout_marginLeft="5dp"
                                    android:id="@+id/btn_manageroom_getfile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="7"
                                    android:background="@drawable/button"
                                    android:text="명단 가져오기"
                                    android:textColor="#fff" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/download_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="명단 양식이 필요하신가요?"
                                android:layout_marginTop="20dp"
                                android:gravity="center"/>
                            <Button

                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:id="@+id/btn_download"
                                android:layout_gravity="center"
                                style="?android:attr/borderlessButtonStyle"
                                android:text="명단 양식 다운로드"
                                android:textSize="12dp"
                                android:textColor="#000"
                                android:theme="@style/MyButton" />


                    </LinearLayout>

                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        >

                        <Button
                            android:id="@+id/btn_manageroom_makeroom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:background="@drawable/button"
                            android:text="Save"
                            android:textColor="#fff"
                            android:theme="@style/MyButton" />
                    </LinearLayout>



            </LinearLayout>

            </LinearLayout>
        </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>