<?xml version="1.0" encoding="utf-8"?><!-- 슬라이딩 드로어로 인식되려면 gravity 속성이 있어야함.!-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_view_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:background="#f1f3f5"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_weight="8"
        android:background="#ffffff"
        android:elevation="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_nav_room_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="환영합니다."
                android:textColor="#000"
                android:textSize="32dp" />

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/text_nav_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="김유림"
                android:textSize="24dp"
                android:textColor="#000" />

            <Button
                android:id="@+id/btn_nav_room_visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/login_borderbox"
                android:padding="8dp"
                android:text="로그인 하러가기"
                android:textSize="20dp"
                android:visibility="invisible" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_nav_room_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/btn_nav_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="MY ROOM"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/image_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_nav_room_close"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_baseline_close_24" />


</LinearLayout>