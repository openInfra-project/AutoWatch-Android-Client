<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settingcamera">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:background="@color/ourColor"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">


                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:layout_marginBottom="2dp"
                    android:src="@drawable/logo"/>

            </LinearLayout>


        </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="자리 이탈 확인을 위한 카메라가 실행됩니다."
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_marginTop="45dp"/>
        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/mainimg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위의 사진을 참고하여 핸드폰을 본인을 향해 "
                android:textSize="13dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가로"
                android:textStyle="bold"
                android:textColor="#234CC8"
                android:textSize="13dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로 배치해 주세요."
                android:textSize="13dp"
                android:layout_marginTop="20dp"/>



        </LinearLayout>

        <Button
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_marginTop="40dp"
            android:textColor="#ffffff"
            android:background="@drawable/button"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>